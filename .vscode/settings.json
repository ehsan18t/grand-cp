{
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
    "source.organizeImports.biome": "always",
    "source.fixAll.biome": "explicit"
  },
	"files.associations": {
	  "wrangler.json": "jsonc"
	},
  "editor.formatOnSaveMode": "file",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[tailwindcss]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "cSpell.words": [
    "bprogress",
    "clsx",
    "crawlable",
    "devsafe",
    "ecb",
    "ecb-site",
    "EMEA",
    "GSAP",
    "importmap",
    "Kode",
    "lucide",
    "payloadcms",
    "shadcn",
    "TAFC",
    "TAFJ",
    "Temenos",
    "turbopack",
    "yoyo"
  ]
}
